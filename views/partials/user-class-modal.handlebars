<div id="modal-backdrop" class="hidden"></div>
<div id="modal-popup" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Add New Class & Grade</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="input-element">
        <label for="userclass">Name:</label>
        <input type="text" id="userclass">
      </div>
      <div class="input-element">
        <label for="userclassgrade">Grade:</label>
          <input type="text" id="userclassgrade">
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" id="classinfosave" class="modal-accept-button">Register</button>
    </div>

  </div>
</div>
